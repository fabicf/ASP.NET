@page
@model MyFriends.Pages.AddModel
@{
}

<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div class="form-group">
                <label asp-for="NewFriend.Name" class="control-label"></label>
                <input asp-for="NewFriend.Name" class="form-control" />
                <span asp-validation-for="NewFriend.Name"></span>
            </div>


            <div class="form-group">
                <label asp-for="NewFriend.Age" class="control-label"></label>
                <input asp-for="NewFriend.Age" class="form-control" />
                <span asp-validation-for="NewFriend.Age"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add Friend" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>
